
post_install() {
	systemctl daemon-reload
	systemctl enable npm-template-sync-github-hook
}

pre_upgrade() {
	systemctl stop npm-template-sync-github-hook
}

post_upgrade() {
	systemctl daemon-reload
	systemctl start npm-template-sync-github-hook
}

pre_remove() {
	systemctl stop npm-template-sync-github-hook
	systemctl disable npm-template-sync-github-hook
}
