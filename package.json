{
  "name": "npm-template-sync-github-hook",
  "version": "0.0.0-semantic-release",
  "publishConfig": {
    "access": "public"
  },
  "module": "src/npm-template-sync-github-hook.mjs",
  "description": "github hook for npm-template-sync",
  "keywords": [
    "npm",
    "template",
    "webhook",
    "github"
  ],
  "contributors": [
    {
      "name": "Markus Felten",
      "email": "markus.felten@gmx.de"
    }
  ],
  "license": "BSD-2-Clause",
  "bin": {
    "npm-template-sync-github-hook": "bin/npm-template-sync-github-hook"
  },
  "scripts": {
    "cover": "c8 --temp-directory build/tmp ava && c8 report -r lcov -o build/coverage --temp-directory build/tmp",
    "docs": "documentation readme src/npm-template-sync-github-hook.mjs --section=API",
    "lint": "documentation lint src/npm-template-sync-github-hook.mjs",
    "package": "npm-pkgbuild --npm-dist --npm-modules pkgbuild pacman makepkg",
    "posttest": "npm run prepare && markdown-doctest",
    "prepare": "rollup -c",
    "pretest": "npm run prepare",
    "start": "node bin/npm-template-sync-github-hook",
    "test": "ava"
  },
  "dependencies": {
    "commander": "^2.20.0",
    "config-expander": "^10.2.5",
    "github-repository-provider": "^7.1.0",
    "koa": "^2.7.0",
    "koa-better-router": "^2.1.1",
    "koa-github-hook-handler": "^1.0.1",
    "npm-template-sync": "^8.1.34"
  },
  "devDependencies": {
    "ava": "^1.4.1",
    "c8": "^4.1.4",
    "documentation": "^10.1.0",
    "esm": "^3.2.22",
    "got": "^9.6.0",
    "markdown-doctest": "^0.9.1",
    "npm-pkgbuild": "^5.2.9",
    "rollup": "^1.11.3",
    "rollup-plugin-cleanup": "^3.1.1",
    "rollup-plugin-commonjs": "^9.3.4",
    "rollup-plugin-executable": "^1.4.5",
    "rollup-plugin-json": "^4.0.0",
    "rollup-plugin-node-resolve": "^4.2.3",
    "semantic-release": "^15.13.12",
    "x-hub-signature": "^1.2.0"
  },
  "optionalDependencies": {
    "sd-daemon": "^1.0.1"
  },
  "engines": {
    "node": ">=10.15.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/arlac77/npm-template-sync-github-hook.git"
  },
  "files": [
    "bin"
  ],
  "bugs": {
    "url": "https://github.com/arlac77/npm-template-sync-github-hook/issues"
  },
  "homepage": "https://github.com/arlac77/npm-template-sync-github-hook#readme",
  "release": {},
  "ava": {
    "files": [
      "tests/*-test.js",
      "tests/*-test.mjs"
    ],
    "require": [
      "esm"
    ],
    "babel": false,
    "compileEnhancements": false,
    "extensions": [
      "js",
      "mjs"
    ]
  },
  "template": {
    "repository": {
      "url": "https://github.com/arlac77/npm-package-template.git"
    }
  },
  "pacman": {
    "groups": "webhook",
    "install": "pacman/install.sh",
    "installdir": "/services/${name}",
    "depends": {
      "systemd": ">=241.0"
    },
    "content": {
      "/usr/lib/tmpfiles.d/${name}.conf": "pacman/tmpfiles.conf"
    }
  },
  "systemd": {
    "units": {
      "${name}": "systemd/${name}*"
    }
  }
}
