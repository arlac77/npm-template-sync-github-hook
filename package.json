{
  "name": "npm-template-sync-github-hook",
  "version": "0.0.0-semantic-release",
  "publishConfig": {
    "access": "public"
  },
  "sideEffects": false,
  "type": "module",
  "main": "./src/npm-template-sync-github-hook-cli.mjs",
  "exports": {
    ".": "./src/npm-template-sync-github-hook-cli.mjs"
  },
  "description": "github hook for npm-template-sync",
  "keywords": [
    "github",
    "npm",
    "template",
    "webhook"
  ],
  "contributors": [
    {
      "name": "Markus Felten",
      "email": "markus.felten@gmx.de"
    }
  ],
  "license": "BSD-2-Clause",
  "bin": {
    "npm-template-sync-github-hook": "src/npm-template-sync-github-hook-cli.mjs"
  },
  "scripts": {
    "start": "node src/npm-template-sync-github-hook-cli.mjs",
    "test": "npm run test:ava",
    "test:ava": "ava --timeout 2m tests/*.mjs",
    "cover": "c8 -x 'tests/**/*' --temp-directory build/tmp ava --timeout 2m tests/*.mjs && c8 report -r lcov -o build/coverage --temp-directory build/tmp",
    "docs": "documentation readme ./src/npm-template-sync-github-hook-cli.mjs --section=API",
    "lint": "npm run lint:docs",
    "lint:docs": "documentation lint ./src/npm-template-sync-github-hook-cli.mjs"
  },
  "dependencies": {
    "commander": "^6.2.0",
    "config-expander": "^12.0.1",
    "github-repository-provider": "^7.18.20",
    "koa": "^2.13.0",
    "koa-better-router": "^2.1.1",
    "koa-github-hook-handler": "^1.4.7",
    "npm-template-sync": "^10.0.17",
    "sd-daemon": "^1.0.2"
  },
  "devDependencies": {
    "@semantic-release/commit-analyzer": "^8.0.1",
    "@semantic-release/exec": "^5.0.0",
    "@semantic-release/release-notes-generator": "^9.0.1",
    "ava": "^3.13.0",
    "c8": "^7.3.5",
    "documentation": "github:arlac77/documentation",
    "got": "11.8.0",
    "npm-pkgbuild": "^6.12.13",
    "semantic-release": "^17.2.3",
    "x-hub-signature": "^1.2.0"
  },
  "optionalDependencies": {
    "sd-daemon": "^1.0.2"
  },
  "engines": {
    "node": ">=14.15.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/arlac77/npm-template-sync-github-hook.git"
  },
  "bugs": {
    "url": "https://github.com/arlac77/npm-template-sync-github-hook/issues"
  },
  "homepage": "https://github.com/arlac77/npm-template-sync-github-hook#readme",
  "config": {
    "base": "/services/npm-template-sync",
    "socket": "/run/${name}/http/socket"
  },
  "systemd": {
    "units": {
      "${name}": "systemd/${name}*"
    }
  },
  "pacman": {
    "arch": [
      "aarch64",
      "armv7h",
      "x86_64"
    ],
    "groups": "webhook",
    "hooks": "pacman/hooks.sh",
    "installdir": "/services/${name}",
    "depends": {
      "systemd": ">=246.6",
      "nginx-mainline": ">=1.19.3"
    },
    "backup": "etc/${name}/config.json",
    "content": {
      "/etc/${name}/config.json": "pacman/config.json",
      "/usr/lib/tmpfiles.d/${name}.conf": "pacman/tmpfiles.conf",
      "/usr/lib/sysusers.d/${name}.conf": "pacman/sysusers.conf",
      "/etc/nginx/config.d/${name}.conf": "pacman/nginx.conf"
    }
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/exec",
        {
          "publishCmd": "npx npm-pkgbuild --pkgver ${nextRelease.version} --npm-dist --npm-modules pkgbuild pacman makepkg"
        }
      ]
    ]
  },
  "template": {
    "inheritFrom": [
      "arlac77/template-arlac77-github",
      "arlac77/template-esm-only",
      "arlac77/template-nginx",
      "arlac77/template-pacman",
      "arlac77/template-systemd"
    ]
  }
}
